extend layout 

block content 

    h1=title
    form(method='POST' action='')
        .name-input 
            label(for='title') Title: 
            input( type='text' name='title' max-length=50 min-length=3 placeholder='Item Title' value = (item === undefined ? '' : item.title) )
        .description 
            label(for='description') Description: 
            input( type='text' name='description' max-length=100 min-length=3 placeholder='Item Description' value = (item === undefined ? '' : item.description) )
        .price 
            label(for='price') Price:
            input( type='number' min="0.01" step="0.01" name='price' placeholder="Item Price" value = (item === undefined ? '' : item.price))
        .in-stock
            label(for='inStock') In Stock: 
            input(type='number' name='inStock' min="0" placeHolder="Item Stock" value = (item === undefined ? '' : item.inStock))
        .category 
            label(for='category') Category: 
            select(name='category' value = (item === undefined ? '' : item.category.name))
                for category in categories 
                    option(value=category._id) #{category.name}
        button(type='submit' value='Submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg