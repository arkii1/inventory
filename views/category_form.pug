extends layout 

block content
    title=title
    .d-flex.flex-column.justify-content-center.align-items-center.gap-3
        h1=title
        hr(class="my-3" style="height: 1px; width: 40vw; color: black")
        form(class="d-flex flex-column justify-content-center align-items-center gap-3" method='POST' action='')
            .d-flex.flex-column.align-items-center.justify-content-center.gap-1
                label(for='name') Name: 
                input( type='text' name='name' max-length=50 min-length=3 placeholder='Category Name' value = (category === undefined ? '' : category.name) )
            .d-flex.flex-column.align-items-center.justify-content.center.gap-1
                label(for='description') Description: 
                input( type='text' name='description' max-length=100 min-length=3 placeholder='Category Description' value = (category === undefined ? '' : category.description) )
            button(type='submit' value='Submit' class="btn btn-primary") Submit
        if errors
            ul
                for error in errors
                    li!= error.msg
        a(class="btn btn-primary" href=`/`) Return Home