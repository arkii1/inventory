extends layout

block content 
    .d-flex.flex-column.justify-content-center.align-items-center.gap-3
        title=title
        h1=title
        hr(style="height: 1px; width: 40vw; color: black")
        form(action='' method='POST')
            input(type='hidden' name='item_id' id='item_id' value=item._id required)
            button(class="btn btn-primary" type='submit') Delete
        a(href="/" class="btn btn-primary") Return Home
